  <Quest Name="SurvivalUnlock" Priority="30">
    <Events>
      <FightEnd />
    </Events>
    <Conditions>
      <Equal Value1="?Fight(_$Fight).Zone" Value2="ZONE_1" />
      <Equal Value1="?Battle(ZONE_1|Survival|).Available" Value2="0" />
      <Equal Value1="_SurvivalUnlock" Value2="1" Not='1' />
      <Equal Value1="?Fight(_$Fight).Battle" Value2="Tournament" />
      <Operator Type="Or">
        <Operator Type="And">
          <Equal Value1="_$FightResult" Value2="Loss" />
          <Greater Value1="?Fight(_$Fight).LossCount" Value2="1" />
          <Operator Type="Or">
            <Greater Value1="_BestAcquiredArmorLevel" Value2="0" />
            <Less Value1="?Player().Money" Value2="?Item(ARMOR_ROBE).Price" />
          </Operator>
        </Operator>
        <Operator Type="And">
          <Equal Value1="_$FightResult" Value2="Loss" />
          <Greater Value1="_BestAcquiredHelmLevel" Value2="0" />
          <Greater Value1="_BestAcquiredArmorLevel" Value2="0" />
        </Operator>
        <Operator Type="And">
          <Equal Value1="_$FightResult" Value2="Win" />
          <Equal Value1="?Fight(ZONE_1|Tournament|6).WinCount" Value2="0" Not="1" />
        </Operator>
      </Operator>

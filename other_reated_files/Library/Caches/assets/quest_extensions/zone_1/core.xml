<Quests>
  <Quest Name="FirstSuperItemAvailable" Priority="-1" Unresumable="1">
    <Events>
      <ChangeTab />
    </Events>
    <Conditions>
      <Equal Value1="_$SceneFrom" Value2="Shop" />
      <Equal Not="1" Value1="_FirstSuperItemFlag" Value2="1" />
      <GreaterEqual Value1="?Player().Level" Value2="?Item(HELM_CONICAL_HAT).Level" />
    </Conditions>
    <Actions>
      <OpenShop Tab="Helm" Item="HELM_CONICAL_HAT" />
      <Dialog Type="Regular" Title="characterMay" Image="character_may_3">
        <Line Text="dlgSuperItemAvailable" ButtonText="dlgStoryBtnMore" />
        <Button Type="Right" Color="Green" Text="dlgStoryBtnOk" />
      </Dialog>
      <SetVariable Name="FirstSuperItemFlag" Value="1" />
    </Actions>
  </Quest>
</Quests>